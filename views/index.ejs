<%- include("partials/header.ejs") %>
<div class="box">
    <div class="content">
        <h1>Click on the Button below to start making blogs</h1>
    </div>
    <div class="submit">
        <form action="/submit" method="POST" id="form">
            <textarea id="text" name="text" placeholder="Enter your text here"></textarea>
            <input type="submit" value="Generate Name" id="btn">
        </form>
    </div>
    <% if (generatedName) { %>
        <p>Generated Post: <%= generatedName %></p>
    <% } %>
    <%- include("partials/footer.ejs") %>
    <script>
        // Example frontend interaction
        document.getElementById("btn").onclick = function () {
            alert("Form Submitted!");
        };
    </script>
</div>